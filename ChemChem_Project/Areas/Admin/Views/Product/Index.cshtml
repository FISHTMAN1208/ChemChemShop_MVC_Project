@model List<Product>


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="col-12 text-center">
            <h1 class="text-white py-2"> <b>SẢN PHẨM CỦA TÔI</b></h1>
        </div>

    </div>
    <div class="card-body p-4">
        <div class="row  pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i i class="bi bi-plus-circle"></i>  Tạo sản phẩm
                </a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Tiêu đề
                    </th>
                    <th>
                        Mô tả
                    </th>
                    <th>
                        Mã ISBN
                    </th>
                    <th>
                        Giá tiền
                    </th>
                    <th>
                        Tác giả
                    </th>
                    <th>
                        Danh mục
                    </th>
                    <th></th>
                </tr>
            </thead>
        </table>
       
    </div>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}
